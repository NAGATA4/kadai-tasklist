<% if logged_in? %>
    <p>ログイン完了ユーザ： <%= current_user.name %></p>
<h1>タスク一覧</h1>

<ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
</ul>
<ul>
<li><%= link_to '新規タスクの作成', new_task_path %></li>

<li><%= link_to 'Logout', logout_path, method: :delete %></li>
</ul>
<% else %>
    <div class="center jumbotron">
        <div class="text-center">
            <h1>タスク管理アプリ</h1>
            <ul>
            <li><%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %></li>
            <li><%= link_to 'Log in!', login_path, class: 'btn btn-lg btn-primary' %></li>
            </ul>
        </div>
    </div>
<% end %>